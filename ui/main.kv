<MainScreen>:
    md_bg_color: 0, 0, 0, 1
    FitImage:
        source: 'assets/images/new_game/main_bg.png'

    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"

        Widget:
            size_hint_y: 0.6

        MDFillRoundFlatButton:
            text: "Start Game"
            font_size: "18sp"
            size_hint: 0.8, None
            height: "56dp"
            pos_hint: {"center_x": 0.5}
            md_bg_color: 0, 0, 0, 0
            elevation: 0
            on_release: app.start_game(self)
            Image:
                source: 'assets/images/new_game/main_start_btn.png'
                size: self.parent.size
                pos: self.parent.pos
                allow_stretch: True
                keep_ratio: True

        MDBoxLayout:
            spacing: "20dp"
            size_hint: 0.8, None
            height: "56dp"
            pos_hint: {"center_x": 0.5}

            MDFillRoundFlatButton:
                text: "Settings"
                font_size: "16sp"
                size_hint_x: 0.5
                md_bg_color: 0, 0, 0, 0
                elevation: 0
                on_release: app.open_settings()
                Image:
                    source: 'assets/images/new_game/main_settings_btn.png'
                    size: self.parent.size
                    pos: self.parent.pos
                    allow_stretch: True
                    keep_ratio: False

            MDFillRoundFlatButton:
                text: "Exit"
                font_size: "16sp"
                size_hint_x: 0.5
                md_bg_color: 0, 0, 0, 0
                elevation: 0
                on_release: app.exit_app()
                Image:
                    source: 'assets/images/new_game/main_exit_btn.png'
                    size: self.parent.size
                    pos: self.parent.pos
                    allow_stretch: True
                    keep_ratio: False

        Widget:
            size_hint_y: 0.2
